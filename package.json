{
  "name": "gnw_application",
  "version": "1.0.0",
  "author": "BSU STUDENTS",
  "description": "Order management and Inventory management with DSS",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run start:electron\" \"npm run start:reload\"",
    "start:electron": "cross-env NODE_ENV=development electron .",
    "start:reload": "electron-reload .",
    "start:prod": "cross-env NODE_ENV=production electron main.js",
    "build": "electron-builder"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.43.4",
    "axios": "^1.7.8",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "date-fns": "^3.6.0",
    "deep-email-validator": "^0.1.21",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "electron-reload": "^2.0.0-alpha.1",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "express-session": "^1.18.0",
    "fast-csv": "^5.0.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "nodemailer": "^6.9.13",
    "nodemon": "^3.1.4",
    "redis": "^4.7.0",
    "session": "^0.1.0",
    "socket.io": "^4.7.5",
    "usb": "^2.13.0",
    "uuid": "^10.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.4.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.gnw_application",
    "productName": "GNW Application",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "index.js",
      "main.js",
      "preload.js",
      "public/**/*",
      "src/**/*",
      "dist/**/*",
      ".env"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/assets/images/application_icon.ico",
      "signingHashAlgorithms": [
        "sha256"
      ]
    }
  }
}
